<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_below="@+id/first_relative_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_create_food"
        android:orientation="vertical">

        <EditText
            android:id="@+id/food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="10dp"
            android:paddingBottom="6dp"
            android:textSize="@dimen/title_text_size"
            android:hint="Food name"/>

        <EditText
            android:id="@+id/brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingBottom="10dp"
            android:textSize="@dimen/title2_text_size"
            android:hint="Brand" />

        <View
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/serving_size_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="@dimen/text_size_l"
                android:text="Serving size" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:inputType="number|numberDecimal"
                android:id="@+id/serving_size_entry"
                android:textSize="@dimen/text_size_l"
                android:text="1" />

            <Spinner
                android:id="@+id/spinner_foods_unity_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:entries="@array/foods_unity_type"
                android:textSize="@dimen/text_size_l"
                android:layout_weight="0.25"/>

            <EditText
                android:id="@+id/calories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="0.15"
                android:textSize="@dimen/text_size_l"
                android:inputType="number"
                android:imeOptions="actionDone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="0.1"
                android:textSize="@dimen/text_size_l"
                android:text="cals." />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="#c0c0c0" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="10dp"
            android:weightSum="1">

            <TextView
                android:layout_width="4dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingEnd="4dp"
                android:text="Meals and Snacks Time"
                android:textSize="@dimen/text_size_xl" />

            <TextView
                android:id="@+id/meal_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="BREAKFAST"
                android:textSize="@dimen/title2_text_size" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingStart="6dp"
            android:paddingEnd="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="@dimen/text_size_xl"
                android:text="Date" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:inputType="text|number"
                android:id="@+id/date"
                android:textSize="@dimen/text_size_m"
                android:hint="date"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="#c0c0c0"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:inputType="text|number"
                android:id="@+id/time"
                android:textSize="@dimen/text_size_m"
                android:hint="time"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height= "2dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="#c0c0c0"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"/>

            <Button
                android:id="@+id/button_log_this"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="0.5"
                android:text="LOG THIS"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>